{
  "dashboard": {
    "id": null,
    "title": "WhatsApp Agent - Production Dashboard",
    "tags": ["whatsapp", "agent", "production"],
    "timezone": "browser",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "API Health Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"whatsapp-agent\"}",
            "legendFormat": "API Status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "unit": "bool"
          }
        }
      },
      {
        "id": 2,
        "title": "Request Rate (req/min)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total[1m]) * 60",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Response Time (95th percentile)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile", 
            "refId": "B"
          }
        ]
      },
      {
        "id": 4,
        "title": "Error Rate (%)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m]) / rate(http_requests_total[5m]) * 100",
            "legendFormat": "5xx Error Rate",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{status=~\"4..\"}[5m]) / rate(http_requests_total[5m]) * 100",
            "legendFormat": "4xx Error Rate",
            "refId": "B"
          }
        ]
      },
      {
        "id": 5,
        "title": "Webhook Processing",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(webhook_messages_processed_total[1m]) * 60",
            "legendFormat": "Messages/min",
            "refId": "A"
          },
          {
            "expr": "rate(webhook_processing_duration_seconds_sum[1m]) / rate(webhook_processing_duration_seconds_count[1m])",
            "legendFormat": "Avg Processing Time",
            "refId": "B"
          }
        ]
      },
      {
        "id": 6,
        "title": "Database Connections",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "database_connections_active",
            "legendFormat": "Active",
            "refId": "A"
          },
          {
            "expr": "database_connections_idle",
            "legendFormat": "Idle",
            "refId": "B"
          }
        ]
      },
      {
        "id": 7,
        "title": "Memory Usage (MB)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "process_resident_memory_bytes / 1024 / 1024",
            "legendFormat": "Memory Usage",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "title": "CPU Usage (%)",
        "type": "timeseries", 
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 24},
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[5m]) * 100",
            "legendFormat": "CPU Usage",
            "refId": "A"
          }
        ]
      },
      {
        "id": 9,
        "title": "Rate Limiting",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "rate(rate_limit_hits_total[1m]) * 60",
            "legendFormat": "Rate Limit Hits/min",
            "refId": "A"
          }
        ]
      },
      {
        "id": 10,
        "title": "Lead Scoring Performance",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 9, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "rate(lead_scoring_processed_total[1m]) * 60",
            "legendFormat": "Leads Scored/min",
            "refId": "A"
          },
          {
            "expr": "rate(lead_scoring_errors_total[1m]) * 60",
            "legendFormat": "Scoring Errors/min",
            "refId": "B"
          }
        ]
      },
      {
        "id": 11,
        "title": "Cache Performance",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 9, "x": 9, "y": 32},
        "targets": [
          {
            "expr": "cache_hit_rate",
            "legendFormat": "Hit Rate",
            "refId": "A"
          },
          {
            "expr": "rate(cache_operations_total[1m]) * 60",
            "legendFormat": "Operations/min",
            "refId": "B"
          }
        ]
      }
    ]
  }
}
